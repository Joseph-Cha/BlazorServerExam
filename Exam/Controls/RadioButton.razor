<div class="form-check">
  <input class="form-check-input" type="radio" name=@(Name) id=@($"radio_button_{this.GetHashCode()}") disabled=@(IsReadonly) value=@(Value) checked=@(IsChecked) @onchange=@(OnChanged)>
  <label class="form-check-label" for=@($"radio_button_{this.GetHashCode()}")>
    @ChildContent
  </label>
</div>

@code {
    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; } 

    [Parameter]
    public bool IsReadonly { get; set; }

    [Parameter]
    public bool IsChecked { get; set; }

    [Parameter]    
    public string Value { get; set; } 

    [Parameter]
    public EventCallback<ChangeEventArgs> OnChanged { get; set; }
}
